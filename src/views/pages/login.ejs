<div class='row'>
    <div class="col-12 col-lg-6 offset-lg-3 text-center">
        <img src='/assets/img/logo.svg' width='200px' height='auto' />

        <h1>Login</h1>
        Please enter your username and password.
        <br /><br />

        <form id="loginForm">
            <div class="mb-1">
                <input type="text" class="form-control form-control-lg" id="userName" name="userName" required placeholder="Username" />
            </div>
            <div class="mb-1">
                <input type="password" class="form-control form-control-lg" id="password" required placeholder="Password" />
            </div>

            <div id="loginError" class="d-none text-danger mb-2"></div>

            <div class="mb-2">
                <button type="submit" id="login" class="btn btn-secondary btn-lg col-12">Login</button>
            </div>

            <div class="d-flex justify-content-between">
                <a href="./forgot-password" class='text-muted'>Forgot password?</a>
                <a href="./register" class='text-muted'>Create new account</a>
            </div>
        </form>
    </div>
    <script src="./events/LoginScriptBundled.js"></script>
</div>